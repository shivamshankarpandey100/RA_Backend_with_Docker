<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <!-- Root Logger -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

</configuration>
